    ViewBag.Title = "AdminMensualidadEditar";
    Layout = "~/Views/Shared/_Layout.cshtml";

    WebGrid grid = new WebGrid(Model.ltAdminMensualidadDetalle, // source
                                null, // columnNames
                                null, // defaultSort
                                30,   // rowsPerPage
                                true, // canPage
                                true, // canSort
                                null, // ajaxUpdateContainerId
                                null, // ajaxUpdateCallback
                                null, // fieldNamePrefix
                                null, // pageFieldName
                                null, // selectionFieldName
                                null, // sortFieldName
                                null);// sortDirectionFieldName

